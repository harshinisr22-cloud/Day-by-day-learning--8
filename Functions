# -----------------------------------------
# DAY 8 – PYTHON FUNCTIONS (BEGINNER NOTES)
# -----------------------------------------

# 1. Simple function – prints hello
def hello():
    print("Hello Python")

hello()


# 2. Function that prints your name
def myname():
    print("Minitales")

myname()


# 3. Function that adds two numbers
def add(a, b):
    print("Sum =", a + b)

add(5, 3)


# 4. Function that returns square of a number
def square(n):
    return n * n

print("Square =", square(4))


# 5. Function with loop inside
def numbers():
    for i in range(1, 6):
        print(i)

numbers()


# -----------------------------------------
# REAL-LIFE EXAMPLES
# -----------------------------------------

# 6. Mixer Grinder Function
def mixer(fruits):
    return "juice"

print("Mixer output:", mixer("apple"))


# 7. Calculator addition
def calc_add(a, b):
    return a + b

print("Calculator add:", calc_add(10, 20))


# 8. Washing Machine Function
def wash(clothes):
    return "clean clothes"

print("Washer:", wash("dirty clothes"))


# 9. Play button function
def play_song():
    print("Playing song...")

play_song()


# 10. Google search example
def search(query):
    return "results for " + query

print(search("python"))


